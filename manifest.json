{
    "manifest_version": 3,
    "name": "Shorts Killer",
    "version": "1.0",
    "description": "Redirect Youtube Shorts links to their original video URL",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/redirect.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ]
}